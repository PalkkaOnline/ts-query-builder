{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "declaration": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "ES2022",
      "dom",
      "dom.iterable"
    ],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "types": [
      "react"
    ],
    "outDir": "./dist",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "*.config.cjs"
  ]
}
